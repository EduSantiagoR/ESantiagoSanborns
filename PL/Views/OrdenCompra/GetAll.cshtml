@model ML.OrdenCompra
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Compras realizadas</h1>
<hr />
<div>
    @if(Model.OrdenesCompra != null)
    {
        if(Model.OrdenesCompra.Count > 0)
        {
            <table class="table table-dark table-hover text-center">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Producto</th>
                        <th>Precio unitario</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(ML.OrdenCompra orden in Model.OrdenesCompra)
                    {
                        <tr>
                            <td>@orden.FechaCompra.ToShortDateString()</td>
                            <td>@orden.Cliente</td>
                            <td>@orden.Producto.Nombre</td>
                            <td>$ @orden.Producto.PrecioUnitario</td>
                            <td>@orden.Cantidad</td>
                            <td>$ @(orden.Producto.PrecioUnitario * orden.Cantidad)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div role="alert" class="alert alert-warning">No hay ordenes de compra registradas</div>
        }
    }
</div>